<div class="container">

    <p>Welcome to Add blogpost</p>

    <div>
        Hello
        <%= user.username%> what's on your mind?
    </div>

    <form action="/add/new" method="POST" id="new-post" enctype="multipart/form-data">
    
        <div class="field">
            <label for="postTitle">Title</label>
            <input type="text" name="postTitle" maxlength="140" placeholder="Read this!!!">
        </div>
        
        <div class="field">  
            <label for="postContent">Content</label>
            <textarea rows="4" cols="50" name="postContent" placeholder="What's going on?"></textarea>
        </div>
        
        <div class="field">
            <label for="postStatus">Public or Private:</label>
            <select name="postStatus">
                <option value="publicPost">Public</option>
                <option value="privatePost">Private</option>
            </select>
        </div>
        
        <div class="field">
            <label for="cover-photo">Cover photo:</label>
            <input id="file" type="file" name="photo" capture="camera" accept=" image/* ">
        </div>
        
        <div class="field">
            <label for="lat">Latitude:</label>
            <input type="text" id="lat" name="latitude" value="">
        </div>
        
        <div class="field">
            <label for="lng">Longitude:</label>
            <input type="text" id="lng" name="longitude" value="">
        </div>
        
        <div class="field">
            <button class="button">Post!</button>
            <% if (typeof(errorMessage) != "undefined") { %>
            <p class="error-message">
                <%= errorMessage %>
            </p>
            <% } %>
        </div>
    </form>


    <div id="map"></div>
   
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDbnybcbBy1raUOu9YsNd5QqNz0WBP_M-k"></script>
<script type="text/javascript" src="../javascripts/maps.js"></script>
