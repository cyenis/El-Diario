<!DOCTYPE html>
<html>

<head>
    <title>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <div id="container">
        <h2>Hi
            <%= name %>
        </h2>
    </div>

    <div id="container">
        <a href="/add/new">New post</a>
        <a href="/logout">Logout</a>

        <h2>@
            <%= username %> posts</h2>

        <% posts.forEach(function(post) { %>
            <a href="/add/new/<%= post.id %>">
                <div class="post-container">

                    <p class="post-author">

                        Author Name:
                        <%= post.user_name %>
                            <%= post.postId %>
                    </p>

                    <p class="post-title">
                        Title:
                        <br>
                        <%= post.title %>
                    </p>

                    <p class="post content">
                        Content:
                        <br>
                        <%= post.content %>
                    </p>

                    <p class="post-cover-picture">

                        Picture:
                        <br>
                        <img src="<%= post.picture.pic_path %>" height="100px" class='photo'>
                    </p>

                    <p class="post location">

                        Location:
                        <br>
                        <%= post.location %>
                    </p>

                    <p class="date">
                        <%= moment(post.created_at).format("LL, LTS") %>
                    </p>
            </a>
            <hr>
            </div>
            <% }) %>
    </div>